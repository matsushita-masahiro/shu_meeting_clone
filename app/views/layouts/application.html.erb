<!DOCTYPE html>
<html>
  <head>
    <title>テキストRental</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/cad4f40aba.js" crossorigin="anonymous"></script>
    <!-- jQuery読み込み -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <!-- PopperのJS読み込み -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <!-- BootstrapのJS読み込み -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <% favicon_link_tag('favicon.png') %>
    <link rel="icon" href="assets/favicon.png"> 
  </head>

  <body>
  <nav class="navbar navbar-expand-lg" style="background-color:white;">
    <img src="/assets/books.svg" width="30" height="30" alt="">
      <a class="navbar-brand" href="/"><strong>テキストRental</strong></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
     </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            教科書を探す
          </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">カテゴリー一覧</a>
              <a class="dropdown-item" href="#">出版社一覧</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">こだわり検索</a>
             </div>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            掲示板
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="#">掲示板にいく</a>
            <a class="dropdown-item" href="#">新しく投稿する</a>
        </div>
      </ul>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
      <span class="navbar-toggler-icon"></span>
    </button>
    
   
       <ul class="nav justify-content-end">
        <li class="nav-item">
          <%= link_to '無料会員登録', new_user_registration_path, class: "nav-link"%>
        </li> 
        <li class="nav-item">
          <%= link_to 'ログイン', new_user_session_path, class: "nav-link" %>
        </li>
          <%= link_to "#" do %>
           <i class="nav-link nav-icon far fa-user fa-lg icon" title="マイページ"></i>
          <% end %>
          <%= link_to "#" do %>
           <i class="nav-link nav-icon far fa-comments fa-lg icon" title="メッセージ"></i>
          <% end %>
          <%= link_to "#" do %>
           <i class="nav-link nav-icon far fa-file-alt fa-lg icon" title="レンタル履歴"></i>
          <% end %>
          <%= link_to "#" do %>
           <i class="nav-link nav-icon far fa-question-circle fa-lg icon" title="ヘルプ"></i>
          <% end %>
          <%= link_to "#" do %>
           <i class="nav-link nav-icon fas fa-shopping-cart fa-behance fa-flip-horizontal fa-lg icon" title="カートを見る"></i>
          <% end %>
      </ul>
  </div>
</nav>
      <div class="container main-page">
      <% if notice %>
        <br>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <br>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
  
    <%= yield %>
  
  </body>
</html>
