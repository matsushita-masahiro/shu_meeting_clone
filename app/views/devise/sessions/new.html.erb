<div class="mx-auto"style="width: 700px;">
  <h2>ログイン</h2>
    <div class="card bg-light ">
      <div class="col-14">
        <div class="card-header">アカウント情報</div>
          
          <div class="row justify-content-center">
           <div class="col-10">
             <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                
                <div class="field">
                  <%= f.label :email, 'メールアドレス' %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "例）text@textrental.co.jp" %>
                </div>

               <div class="field">
                  <%= f.label :password, 'パスワード' %>
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control"%>
                <% if @minimum_password_length %>
                  <p><font size="-1">※パスワードは<%= @minimum_password_length %>文字以上で設定してください</p>
                <% end %>
               </div>


              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, 'パスワードを記憶する' %><hr>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "ログインする", :class=>"btn btn-info btn-lg btn-block" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
       </div>
     </div>
   </div>
</div>
